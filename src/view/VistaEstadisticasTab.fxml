<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.VistaEstadisticasTabController">
   <center>
      <BarChart fx:id="grafica" prefHeight="136.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <xAxis>
          <CategoryAxis fx:id="ejeX" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="ejeY" side="LEFT" />
        </yAxis>
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin>
      </BarChart>
   </center>
   <bottom>
      <Button fx:id="btnPdf" mnemonicParsing="false" onMouseClicked="#btnPdf_MouseClicked" text="Descargar" BorderPane.alignment="CENTER_RIGHT">
         <BorderPane.margin>
            <Insets bottom="30.0" right="30.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
